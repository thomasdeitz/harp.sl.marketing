section#contactUs
	h2 Learn More
	form#contactForm( action="#{ form_spree }" method="POST" )
	
		fieldset#stepOne
			label( for="name" ) Tell us your name
			input( type="text" name="name" placeholder="Your Name" required )
			
		fieldset#stepTwo
			label( for="_replyto") Tell us your email address
			input( type="email" name="_replyto" placeholder="Your Email" required )
			
		fieldset#stepThree
			label( for="message" ) Tell us about yourself and interest in Socialeads</label>
			textarea( name="message" placeholder="Type your message here..." required )
		
		div#stepFour(style="text-align: center;")
			input( type="submit" value="Send")
			input( type="hidden" name="_next" value="#{ github_deploy }/success" )
			input( type="text" name="_gotcha" style="display: none" )